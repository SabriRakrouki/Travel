{% extends 'baseBack.html.twig' %}

{% block title %}New Category{% endblock %}


{% block content %}

<div class="container" style="height:100%">

    <div class="card o-hidden border-0 shadow-lg my-5" style="height:80%">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block"> <img src="{{ asset('back/img/tt.jpg') }}" width="400" height="530"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Ajouter un Category</h1>
                        </div>


                                <div class="form-group">
                                    {{ form_start(form) }}
                                    {{ form_widget(form.Name,{'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nom Category'}}) }}
                                    {{ form_errors(form.Name) }}
                                </div>


                            {{ form_widget(form.save,{'attr':{'class':'btn btn-danger'}} ) }}
                              {{ form_end(form) }}


                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
