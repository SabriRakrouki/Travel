{% extends 'baseBack.html.twig' %}

{% block title %}  new avis evenement {% endblock %}

{% block content %}

<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block"> <img src="{{ asset('back/img/avis.jpg') }}" width="450" height="700"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">avis</h1>
                        </div>
                            <div class="form-group">
                            {{ form_start(form) }}
                                <div class="form-group">
                                  {{form_label(form.rating)}}

                                    {{ form_widget(form.rating , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'rating'}} ) }}
                                    {{ form_errors(form.rating) }}
                                </div>
                                <div class="form-group">
                                  {{form_label(form.description)}}

                                  {{ form_widget(form.description , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'description'}} ) }}
                                  {{ form_errors(form.description) }}
                                </div>
                            </div>
                            <div class="form-group">
                              {{form_label(form.date_publication)}}

                              {{ form_widget(form.date_publication , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'date_publication'}} ) }}
                                  {{ form_errors(form.date_publication) }}
                            </div>
                            <div class="form-group">
                                <div class=" mb-3 mb-sm-0">
                                  {{form_label(form.user)}}

                                  {{ form_widget(form.user , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Password'}} ) }}
                                  {{ form_errors(form.user) }}
                                </div>
                            </div>
                            <div class="form-group">
                              {{form_label(form.evenement)}}
                              {{ form_widget(form.evenement , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Age'}} ) }}
                              {{ form_errors(form.evenement) }}

                            </div>

                            <div class="form-group">
                              {{ form_widget(form.ajouter , {'attr': {'class': 'form-control form-control-user btn-info' , 'placeholder' : 'Age'}} ) }}


                            </div>

                              {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
