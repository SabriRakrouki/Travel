{% extends 'baseBack.html.twig' %}

{% block title %} New PostForum {% endblock %}

{% block content %}

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block"> <img src="{{ asset('back/img/tt.jpg') }}" width="400" height="530"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Ajouter un Post</h1>
                        </div>
                            <div class="form-group">
                            {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_widget(form.name,{'attr':{'class':'form-control from-control-user','placeholder':'Title Post'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                                <div class="form-group" style="height:90%">
                                  {{ form_widget(form.content , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Content','style':' height:500px'}} ) }}
                                  {{ form_errors(form.content) }}
                                </div>
                            </div>



                            <div class="form-group">
                            <label> choisir la categorie</label>
                            <br>
                              {{ form_widget(form.category  ) }}
                              {{ form_errors(form.category) }}

                            </div>
                             <div class="form-group">
                             <label> user</label>
                             <br>
                              {{ form_widget(form.user ) }}
                              {{ form_errors(form.user) }}

                            </div>


                            {{ form_widget(form.save,{'attr':{'class':'btn btn-danger'}} ) }}
                              {{ form_end(form) }}
                      

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

{% endblock %}
