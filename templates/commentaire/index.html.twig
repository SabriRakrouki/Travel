{% extends 'baseBack.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block content %}
    <h1 style="text-align: center">Commentaire list</h1>
<div class="card shadow mb-4">
    <input style="margin-bottom: 10px" class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">

    <div class="card-body">
            <div>
            <a href="{{ url('commentaire_new')}}"><button type="button" class="btn btn-info mb-4" name="button"> ajouter </button> </a>

            </div>
            <div class="table-responsive">
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody id="hi">
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.content }}</td>
               <td> <a href="{{ url('commentaire_edit' , {id : commentaire.id} ) }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a>
                <a href="{{ url('commentaire_delete' , {id : commentaire.id} ) }}"> <img src="{{ asset('back/img/icon-delete.jpg') }}" alt="edit" width="50px" height="50px" >  </a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
        </div>
</div>
                <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
                <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
                <script>
                    $(document).ready(function(){
                        $("#myInput").on("keyup", function() {
                            var value = $(this).val().toLowerCase();
                            $("#hi tr").filter(function() {
                                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                            });
                        });
                    });
                </script>
{% endblock %}
