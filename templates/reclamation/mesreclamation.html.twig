{% block change %}








<body>

<div class="limiter">
    <div class="container-table100">
        <div class="wrap-table100">
            <div class="table100">
                <table>
                    <thead>
                    <tr class="table100-head">
                        <th class="column1">evenement</th>
                        <th class="column2">description</th>
                        <th class="column3">type</th>
                        <th class="column4" style="margin-right: 10px">etat</th>
                    </tr>
                    </thead>
                    <tbody id="hi">
                    {% for reclamation in liste %}
                        <tr>
                            <td class="column1">{{ reclamation.evenement }}</td>
                            <td class="column2">{{ reclamation.description }}</td>
                            <td class="column3">{{ reclamation.type }}</td>
                            {% if reclamation.etat == "accepter" %}
                                <td class="column4"> <span class="label label-success">Accepter</span></td>
                            {% elseif  reclamation.etat == "refuser"%}
                                <td class="column4"> <span class="label label-important">Refuser</span></td>
                            {% elseif  reclamation.etat == "attente"%}
                                <td class="column4"> <span class="label label-warning">Attente</span></td>
                            {% else %}
                                <td class="column4">{{ reclamation.etat }}</td>

                            {% endif %}

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





</body>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#hi tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        $('select').on('change', function() {
            var value = this.value.toLowerCase() ;
            $("#hi tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

    </script>



