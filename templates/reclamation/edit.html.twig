

{% extends 'baseBack.html.twig' %}

{% block title %}  Edit reclamation {% endblock %}

{% block content %}

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block"> <img src="{{ asset('back/img/tt.jpg') }}" width="400" height="530"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Update Reclamation</h1>
                            </div>
                            <div class="form-group">
                                {{ form_start(form) }}
                                {{ form_widget(form.description , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'description'}} ) }}
                                {{ form_errors(form.description) }}
                                <div class="form-group">
                                    {{ form_widget(form.date_reclamtion , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'description'}} ) }}
                                    {{ form_errors(form.date_reclamtion) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.user , {'attr': {'class': 'form-control form-control-user' , }} ) }}
                                {{ form_errors(form.user) }}
                            </div>
                            <div class="form-group">
                                <div class=" mb-3 mb-sm-0">
                                    {{ form_widget(form.evenement , {'attr': {'class': 'form-control form-control-user' }} ) }}
                                    {{ form_errors(form.evenement) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.user , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Age'}} ) }}
                                {{ form_errors(form.user) }}

                            </div>
                            <div class="form-group">
                                {{ form_widget(form.modifier , {'attr': {'class': 'form-control form-control-user btn-info' }} ) }}

                            </div>
                            <hr>
                            {{ form_end(form) }}
                            <hr>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}
