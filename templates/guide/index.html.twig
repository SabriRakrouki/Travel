{% extends 'baseBack.html.twig' %}

{% block title %}  Guides {% endblock %}

{% block content %}
<h1 style="text-align: center">Gestion des Guides</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
        <a href="{{ url('guide_new')}}"><button type="button" class="btn btn-info mb-4" name="button"> Ajouter </button> </a>
        <a href="{{ url('guidesliste')}}"><button type="button" class="btn btn-info mb-4" name="button"> Imprimer </button> </a>
        <a href="{{ url('mailguide')}}"><button type="button" class="btn btn-info mb-4" name="button"> Mail </button> </a>

            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <input style="margin-bottom: 10px" class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Pays</th>
                        <th>Ville</th>
                        <th>Image</th>
                        <th>Tel</th>
                        <th>Age</th>
                        <th>Sexe</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Language</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody id="hi">
                    {% for guide in guides %}
                        <tr>
                            <td>{{ guide.id }}</td>
                            <td>{{ guide.pays }}</td>
                            <td>{{ guide.ville }}</td>
                            <td>{{ guide.image }}</td>
                            <td>{{ guide.tel }}</td>
                            <td>{{ guide.age }}</td>
                            <td>{{ guide.sexe }}</td>
                            <td>{{ guide.nom }}</td>
                            <td>{{ guide.prenom }}</td>
                            <td>{{ guide.language }}</td>
                            <td> <a href="{{ url('guide_edit' , {id : guide.id} ) }}"> <img src="{{ asset('back/img/edit.png') }}" alt="edit" width="50px" height="50px" >  </a>
                            <a href="{{ url('guide_delete' , {id : guide.id} ) }}"> <img src="{{ asset('back/img/icon-delete.jpg') }}" alt="edit" width="50px" height="50px" >  </a></td>

                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    {{ knp_pagination_render(guides) }}
                </table>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#hi tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

{% endblock %}
