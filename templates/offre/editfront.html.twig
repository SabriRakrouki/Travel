{% extends 'baseFront.html.twig' %}


{% block change %}
    <div class="contact_form_section">
        <div class="container">
            <div class="row">
                <div class="col">
                    <!-- Contact Form -->
                    <div class="contact_form_container">
                        <div class="contact_title text-center">Modifier Offre</div>
                            <div class="form-group">
                                <div class="contact_form_email input_field" style="margin-left: 250px">
                                    {{ form_start(form) }}
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'First Name'}} ) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                                <div class="contact_form_email input_field" style="margin-left: 250px;margin-top: 30px">
                                    {{ form_label(form.date_debut) }}
                                    {{ form_widget(form.date_debut , {'attr': {'class': ' form-select-lg form-control form-control-user' , 'placeholder' : 'Date Debut'}} ) }}
                                    {{ form_errors(form.date_debut) }}
                                </div>
                                <div class="contact_form_email input_field" style="margin-left: 250px;margin-top: 30px">
                                    {{ form_label(form.date_fin) }}
                                    {{ form_widget(form.date_fin , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Date Fin'}} ) }}
                                    {{ form_errors(form.date_fin) }}
                                </div>
                                <div class="contact_form_email input_field" style="margin-left: 250px;margin-top: 30px">
                                    {{ form_label(form.pourcentage) }}
                                    {{ form_widget(form.pourcentage, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Pourcentage'}} ) }}
                                    {{ form_errors(form.pourcentage) }}
                                </div>
                                <div class="contact_form_email input_field" style="margin-left: 250px;margin-top: 30px">
                                    {{ form_label(form.evenement) }}
                                    {{ form_widget(form.evenement, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Evenement'}} ) }}
                                    {{ form_errors(form.evenement) }}
                                </div>
                                <div class="contact_form_email input_field" style="margin-left: 250px;margin-top: 30px">
                                    {{ form_widget(form.modifier , {'attr': {'class': 'form-control form-control-user btn-info' , 'placeholder' : 'Modifier'}} ) }}
                                    {{ form_end(form) }}
                                </div>
                                <div align="right">
                                    <a href="{{ path('frontOffres') }}">Retourner vers Offres</a>
                                </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    {% endblock %}

