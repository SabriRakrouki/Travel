{% extends 'baseBack.html.twig' %}

{% block title %}  Ajouter Offre {% endblock %}

{% block content %}

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block"> <img src="{{ asset('back/img/tt.jpg') }}" width="400" height="530"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Ajouter Offre</h1>
                            </div>
                                <div class="form-group">
                                    {{ form_start(form) }}
                                    {{ form_widget(form.nom , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nom Offre'}} ) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.date_debut , {'attr': {'class': ' form-select-lg form-control form-control-user' , 'placeholder' : 'Date Debut'}} ) }}
                                    {{ form_errors(form.date_debut) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.date_fin , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Date Fin'}} ) }}
                                    {{ form_errors(form.date_fin) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.pourcentage, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Pourcentage'}} ) }}
                                    {{ form_errors(form.pourcentage) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.evenement, {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Evenement'}} ) }}
                                    {{ form_errors(form.evenement) }}
                                </div>

                                <div class="form-group">
                                   {{ form_widget(form.ajouter , {'attr': {'class': 'form-control form-control-user btn-info' , 'placeholder' : 'Ajouter'}} ) }}
                                   {{ form_end(form) }}
                                </div>
                            <div align="right" >
                                <a href="{{ path('offres') }}">Retourner vers Offres</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
