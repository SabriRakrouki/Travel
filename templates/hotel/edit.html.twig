{% extends 'baseBack.html.twig' %}

{% block content %}
<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block"> <img src="{{ asset('back/img/hotel.jpg') }}" width="400" height="710"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <div class="form-group">
                            {{ form_start(form, {'attr': {'id': 'form'}}) }}
                            <div class="form-group">
                                {{ form_widget(form.nom , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nom'}} ) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="form-group">
                                {{ form_widget(form.description , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Description'}} ) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.adresse , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Adresse'}} ) }}
                            {{ form_errors(form.adresse) }}
                        </div>
                        <div class="form-group">
                            <div class=" mb-3 mb-sm-0">
                                {{ form_widget(form.nbrechambre , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nombre de Chambre'}} ) }}
                                {{ form_errors(form.nbrechambre) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.nbrechambreDispo , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nombre de chambre Disponible'}} ) }}
                            {{ form_errors(form.nbrechambreDispo) }}

                        </div>
                        <div class="form-group">
                            {{ form_widget(form.nbreEtoile , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Nombre de Etoile'}} ) }}
                            {{ form_errors(form.nbreEtoile) }}

                        </div>


                        <input type="submit" value="Enregistrer" class="btn btn-success"/>

                        <hr>
                        {{ form_end(form) }}
                        <hr>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Bootstrap core JavaScript-->
<script src="{{ asset('back/vendor/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('back/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<!-- Core plugin JavaScript-->
<script src="{{ asset('back/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

<!-- Custom scripts for all pages-->
<script src="{{ asset('back/js/sb-admin-2.min.js') }}"></script>

{% endblock %}
